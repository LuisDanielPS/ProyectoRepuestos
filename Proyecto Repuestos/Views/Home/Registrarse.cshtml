@model Proyecto_Repuestos.Entities.UsuarioEnt

@{
    ViewBag.Title = "Iniciar Sesión";
    Layout = "~/Views/Shared/_Login.cshtml";
}

@using (Html.BeginForm("RegistrarUsuario", "Home", FormMethod.Post))
{

    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card shadow-lg border-0 rounded-lg mt-5">
                    <div class="card-header">
                        <h2 class="text-center mb-4">Registro</h2>
                        <div class="form-group">
                            <label for="number">Identificacion</label>
                            @Html.TextBoxFor(m => m.usu_identificacion, new { @type = "text", @placeholder = "---------", @class = "form-control" })
                        </div>
                        <div class="form-group">
                            <label for="text">Nombre</label>
                            @Html.TextBoxFor(m => m.usu_nombre, new { @type = "text", @placeholder = "Juan", @class = "form-control" })
                        </div>
                        <div class="form-group">
                            <label for="email">Correo electrónico</label>
                            @Html.TextBoxFor(m => m.usu_correo, new { @type = "email", @placeholder = "correo@ejemplo.com", @class = "form-control" })
                        </div>
                        <div class="form-group">
                            <label for="password">Contraseña</label>
                            @Html.TextBoxFor(m => m.usu_clave, new { @type = "password", @placeholder = "********", @class = "form-control" })
                        </div>


                        <br />

                        <div class="card-footer text-center py-3">
                            <button type="submit" class="btn btn-primary">Registrarse</button>
                            <br />
                            <p>O</p>
                            <div class="small"><a href="@Url.Action("Login", "Home")"> Iniciar Sesion</a></div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
}