@model Proyecto_Repuestos.Entities.UsuarioEnt
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Login.cshtml";
}

@using (Html.BeginForm("IniciarSesion", "Home", FormMethod.Post))
{
    <div class="container max-vh-100 min-vh-50">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card shadow-lg border-0 rounded-lg mt-5">
                    <div class="card-header">
                        <h3 class="text-center font-weight-light"><b>Iniciar Sesión</b></h3>
                    </div>

                    @if (ViewBag.MsjPantalla != null)
                    {
                        <div style="text-align:center" class="alert alert-danger" role="alert">
                            <b>@ViewBag.MsjPantalla</b>
                        </div>
                    }

                    <div class="card-body">
                        <div class="form-group">
                            <label for="inputEmail">Correo Electrónico </label>
                            @Html.TextBoxFor(m => m.usu_correo, new { @type = "email", @placeholder = "correo@ejemplo.com", @class = "form-control", required = "required" })

                        </div>
                        <div class="form-group">
                            <label for="inputPassword">Contraseña </label>
                            @Html.PasswordFor(m => m.usu_clave, new { @class = "form-control", @placeholder = "********", required = "required" })
                        </div>

                    </div>
                    <div class="card-footer">
                        <div class="d-flex justify-content-center">
                            <button type="submit" class="btn btn-primary" id="btnIniciarSesion">Iniciar Sesion</button>
                        </div>
                        <div class="d-flex justify-content-center">
                            <div class="small">No tienes una cuenta? <a href="@Url.Action("Registrarse","Home")">Registrarse</a></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}


