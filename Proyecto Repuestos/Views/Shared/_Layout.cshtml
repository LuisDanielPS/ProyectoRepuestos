<!DOCTYPE html>
<html lang="en">
<head>

    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title>Inicio</title>

    <link type="text/css" rel="stylesheet" href="~/WebStyles/css/bootstrap.min.css" />
    <link type="text/css" rel="stylesheet" href="~/WebStyles/css/slick.css" />
    <link type="text/css" rel="stylesheet" href="~/WebStyles/css/slick-theme.css" />
    <link type="text/css" rel="stylesheet" href="~/WebStyles/css/nouislider.min.css" />
    <link rel="stylesheet" href="~/WebStyles/css/font-awesome.min.css">
    <link type="text/css" rel="stylesheet" href="~/WebStyles/css/style.css" />
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <link rel="stylesheet" href="https://cdn.datatables.net/1.11.5/css/jquery.dataTables.min.css">


</head>
<body>
    <header>
        <div id="top-header">
            <div class="container">
                <ul class="header-links pull-left">
                    <li><a href="#"><i class="fa fa-phone"></i> 2444-0542</a></li>
                    <li><a href="#"><i class="fa fa-envelope"></i> repuestostotal@gmail.com</a></li>
                    <li><a href="https://goo.gl/maps/VP424apG2Ypz8cjd8"><i class="fa fa-map-marker"></i>Provincia de Alajuela, Grecia</a></li>
                </ul>
                <ul class="header-links pull-right">
                    @if (Session["NombreUsuario"] != null)
                    {
                        <li><a href="@Url.Action("CerrarSesion","Home")"><i class="fa fa-user-o"></i> Cerrar Sesion</a></li>
                        <li style="color:white"><i class="fa fa-user-o"></i> Usuario: @Session["NombreUsuario"]</li>
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown"><i class="fa fa-cog"></i> Opciones</a>
                            <ul class="dropdown-menu" style="background-color: #333;">
                                <li><a style="background-color: transparent;" href="@Url.Action("Cambiar","Home")">Recuperar Contraseña</a></li>
                            </ul>
                        </li>
                    }
                    else
                    {
                        <li><a href="@Url.Action("Login","Home")"><i class="fa fa-user-o"></i> Iniciar Sesión</a></li>
                    }

                </ul>
            </div>
        </div>
        <div id="header">
            <div class="container">
                <div class="row align-items-center">
                    <div class="col-md-3">
                        <!-- Logo -->
                        <div class="header-logo">
                            <a href="@Url.Action("Index","Home")" class="logo">
                                <img src="~/WebStyles/img/logo.png" alt="">
                            </a>
                        </div>
                    </div>
                    <div class="col-md-6 text-center">
                    </div>
                    <div class="col-md-3 text-right">
                        <!-- Carrito -->
                        <div class="header-ctn">
                            <div class="dropdown">
                                <a class="dropdown-toggle" data-toggle="dropdown" aria-expanded="true">
                                    <i class="fa fa-shopping-cart"></i>
                                    <span>Carrito</span>
                                    <div class="qty">3</div>
                                </a>
                                <!-- ... (rest of the cart dropdown content) ... -->
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- /MAIN HEADER -->
    </header>
    <!-- /HEADER -->

    @RenderBody()


    <footer id="footer">
        <div class="section">
            <div class="container">
                <div class="row">
                    <div class="col-md-3 col-xs-6">
                        <div class="footer">
                            <h3 class="footer-title">Acerca de nosotros</h3>
                            <p>Proveemos repuestos de vehículos confiables y de calidad, satisfaciendo las necesidades de nuestros clientes.</p>
                            <ul class="footer-links">
                                <li><a href="https://goo.gl/maps/VP424apG2Ypz8cjd8"><i class="fa fa-map-marker"></i>Provincia de Alajuela, Grecia</a></li>
                                <li><a href="#"><i class="fa fa-phone"></i>2444-0542</a></li>
                                <li><a href="#"><i class="fa fa-envelope-o"></i>repuestostotal@gmail.com</a></li>
                            </ul>
                        </div>
                    </div>

                    <div class="clearfix visible-xs"></div>

                    <div class="col-md-3 col-xs-6">
                        <div class="footer">
                            <h3 class="footer-title">Información</h3>
                            <ul class="footer-links">
                                <li><a href="#">¿Quiénes somos?</a></li>
                                <li><a href="#">Contáctenos</a></li>
                                <li><a href="#">Política de privacidad</a></li>
                                <li><a href="#">Términos y condiciones</a></li>
                            </ul>
                        </div>
                    </div>

                    <div class="col-md-3 col-xs-6">
                        <div class="footer">
                            <h3 class="footer-title">Servicios</h3>
                            <ul class="footer-links">
                                <li><a href="@Url.Action("Login","Home")">Mi Cuenta</a></li>
                                <li><a href="#">Ver Carrito</a></li>
                                <li><a href="#">Ayuda</a></li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div id="bottom-footer" class="section">
            <div class="container">
                <div class="row">
                    <div class="col-md-12 text-center">

                        <span class="copyright">
                            Copyright &copy;
                            <script>document.write(new Date().getFullYear());</script> All rights reserved <a></a>
                        </span>
                    </div>
                </div>
            </div>
        </div>

    </footer>
    <script src="~/WebStyles/js/bootstrap.min.js"></script>
    <script src="~/WebStyles/js/nouislider.min.js"></script>
    <script src="https://kit.fontawesome.com/1720a7cd30.js" crossorigin="anonymous"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <script src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script>
    <script src="~/WebStyles/js/DatatableScripts.js"></script>
    <script src="~/WebStyles/js/ScriptsModales.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
</body>
</html>